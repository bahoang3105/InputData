<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textview_mssv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSSV"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/edit_text_mssv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />

        <EditText
            android:id="@+id/edit_text_mssv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/textview_mssv"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_mssv"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ho va Ten"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/edit_text_name"
            app:layout_constraintTop_toBottomOf="@id/textview_mssv"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/textview_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_name"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textview_cccd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CCCD"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/edit_text_cccd"
            app:layout_constraintTop_toBottomOf="@id/textview_name"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />

        <EditText
            android:id="@+id/edit_text_cccd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/textview_cccd"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_cccd"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textview_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/edit_text_sdt"
            app:layout_constraintTop_toBottomOf="@id/textview_cccd"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />

        <EditText
            android:id="@+id/edit_text_sdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/textview_sdt"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_sdt"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toLeftOf="@+id/edit_text_email"
            app:layout_constraintTop_toBottomOf="@id/textview_sdt"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/textview_email"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_email"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngay thang nam sinh"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textview_email"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />
        <CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textview_date"/>
        <EditText
            android:id="@+id/edit_text_que"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/textview_que"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_que"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/textview_que"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que quan"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/calendar_view"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />
        <EditText
            android:id="@+id/edit_text_noi_o"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/textview_noi_o"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_noi_o"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/textview_noi_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noi o hien tai"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textview_que"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />
        <TextView
            android:id="@+id/textview_nganh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nganh hoc"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textview_noi_o"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="8dp" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_nganh"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            >
            <RadioButton
                android:id="@+id/radio_ktmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ky thuat may tinh"
                android:onClick="onRadioButtonClick"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_khmt"
                android:text="Khoa hoc may tinh"
                android:onClick="onRadioButtonClick"/>
        </RadioGroup>
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Dong y "/>
        <Button
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            app:layout_constraintTop_toBottomOf="@id/checkBox"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>